<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <title>GitDataFetch</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    /* Adicione a media query aqui */
    @media (max-width: 768px) {
      table td:nth-child(5),
      table th:nth-child(5) {
        display: none;
      }
      
      table td:nth-child(2),
      table th:nth-child(2),
      table td:nth-child(3),
      table th:nth-child(3) {
        display: block;
        width: 100%;
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <span id="errorSpan" class="error-message">
  <div id="alertContainer"></div>
  </span> 

  <div class="container">
    <main>
      <header>
        <h1>GitDataFetch</h1>
        <div class="input-container">
          <input type="text" id="username" placeholder="Enter GitHub username">
          <button id="searchBtn">Search</button>
        </div>           
      </header>
      <table id="userTable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Followers</th>
            <th>Repositories</th>
            <th>Image</th> <!-- Nova coluna para a imagem -->
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.location %></td>
              <td><%= user.followers %></td>
              <td><%= user.repositories %></td>
              <td><img class="avatar" src="<%= user.avatarUrl %>" alt="Avatar"></td>
              <td><button onclick="deleteRow(this)">Delete</button></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </main>
  </div>

  <script src="/app.js"></script>
</body>
</html>